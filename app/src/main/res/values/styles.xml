    <style name="bg_item_home">
        <item name="android:background">@drawable/bg_escuro_alpha</item>
        <item name="android:alpha">0.4</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="btn_tabs" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="btn_icon_tab_messages" parent="btn_tabs">
        <item name="android:background">@drawable/icon_tab_messages_background</item>
    </style>

    <style name="btn_icon_tab_chectoshare" parent="btn_tabs">
        <item name="android:background">@drawable/icon_tab_cheftoshare_background</item>
    </style>

    <style name="btn_icon_tab_search" parent="btn_tabs">
        <item name="android:background">@drawable/icon_tab_search_background</item>
    </style>

    <style name="RatingBarSmallratting_start" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratting_start_ratingbar_small_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/ratting_start_ratingbar_small_holo_dark</item>
    </style>

    <style name="RatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="Transparent" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="passo_header_ativo">
        <item name="android:background">@drawable/bt_criar_evento_on</item>
    </style>

    <style name="passo_header_inativo">
        <item name="android:background">@drawable/bt_criar_evento_off</item>
    </style>

    <style name="passo_header_indicador_off">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_indicador_passo_off</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="passo_header_indicador_on" parent="passo_header_indicador_off">
        <item name="android:background">@drawable/bg_indicador_passo_on</item>
    </style>
    <style name="bg_novas_msgs">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_indicador_novas_msgs</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
    </style>

    <style name="checkbox_foto_principal" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_foto_principal</item>
    </style>
    <style name="checkbox_foto_divulgacao" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_foto_divulgacao</item>
    </style>
    <style name="checkbox_acompanha_evento" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_ingresso</item>
    </style>

</resources>
