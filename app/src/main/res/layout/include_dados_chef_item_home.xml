<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            >

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_foto_perfil" />

            <br.com.chef2share.view.RoundedImageView
                android:layout_gravity="center"
                android:id="@+id/imgChef"
                style="@style/btn_foto_perfil"
                android:layout_width="78dp"
                android:layout_height="78dp" />


        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressImgChef"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <TextView
            style="@style/text_shadow"
            android:id="@+id/txtNomeChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cadastre_se_com"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/branco"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingAvaliacaoChef"
            style="@style/RatingBarSmallratting_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5" />

    </LinearLayout>


</LinearLayout>
