<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_chef"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/margin"
        android:padding="@dimen/margin"
        android:background="@color/branco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_foto_perfil" />

                <br.com.chef2share.view.RoundedImageView
                    android:id="@+id/imgConvidado"
                    style="@style/btn_foto_perfil"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center" />


            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressImgConvidado"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/txtNomeConvidado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/chef_cinza_escuro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_verified_id_email" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="*"
                    android:textColor="@color/chef_cinza_claro" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chef_cinza_claro" />

    <LinearLayout
        android:id="@+id/layoutConvites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco"
        android:orientation="vertical" />

</LinearLayout>