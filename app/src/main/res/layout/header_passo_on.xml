<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headerPasso1"
        style="@style/passo_header_inativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="@dimen/margin"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/passo_header_indicador_on"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/criar_evento_passo_um"
                 />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/margin"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/criar_evento_local"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/chef_cinza_escuro" />

            <TextView
                android:id="@+id/txtLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/criar_evento_local"
                android:textColor="@color/chef_cinza_claro" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/conteudoPasso1"
        android:background="@color/branco"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        </LinearLayout>


</LinearLayout>
