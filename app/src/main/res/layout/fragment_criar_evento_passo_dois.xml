<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerPasso"
        style="@style/passo_header_inativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <TextView
                android:id="@+id/txtIndicadorPasso"
                style="@style/passo_header_indicador_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/criar_evento_passo_dois" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/criar_evento_cardapio"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/chef_cinza_escuro" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtCardapio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/chef_cinza_claro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin">

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgPassoOk"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/icon_check_verde"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/conteudoPasso2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/conteudoCardapiosCadastrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btnCadastrarNovoCardapio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_branco_background"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/margin"
            android:text="@string/btn_cadastrar_novo_cardapio"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/chef_laranja" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/branco" />
</LinearLayout>
